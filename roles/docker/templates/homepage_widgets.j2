- resources:
    label: System
    cpu: true
    memory: true
    cputemp: true
    units: metric
    expanded: true

- resources:
    label: Storage
    disk: 
      - /
      - "{{ nvme_mount_point }}"
      - "{{ hdd_mount_point }}"
    expanded: true
    diskUnits: bbytes

- search:
      provider: custom
      url: https://www.ecosia.org/search?q=
      target: _blank
      focus: true
      showSearchSuggestions: true